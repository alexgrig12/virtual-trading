<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph.xml"
    app:startDestination="@id/googleAuthFragment">

    <fragment
        android:id="@+id/googleAuthFragment"
        android:name="virtualtrading.auth.api.GoogleAuthFragment"
        android:label="fragment_google_auth"
        tools:layout="@layout/fragment_google_auth" >
        <action
            android:id="@+id/action_googleAuthFragment_to_mainContentFragment"
            app:destination="@id/mainContentFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainContentFragment"
        android:name="com.virtualtrading.MainFragment"
        android:label="MainContentFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainContentFragment_to_googleAuthFragment"
            app:destination="@id/googleAuthFragment" />
    </fragment>
    <navigation android:id="@+id/navigation"
        app:startDestination="@id/buyCoinFragment">
        <fragment
            android:id="@+id/convertCoinFragment"
            android:name="virtualtrading.coinactions.ConvertCoinFragment"
            android:label="ConvertCoinFragment"
            tools:layout="@layout/fragment_convert_coin">
            <deepLink
                app:uri="feature:coinactions://virtualtrading.coinactions/convertCoinFragment"/>
        </fragment>
        <fragment
            android:id="@+id/sellCoinFragment"
            android:name="virtualtrading.coinactions.SellCoinFragment"
            android:label="SellCoinFragment"
            tools:layout="@layout/fragment_sell_coin">
            <deepLink
                app:uri="feature:coinactions://virtualtrading.coinactions/sellCoinFragment"/>
        </fragment>
        <fragment
            android:id="@+id/buyCoinFragment"
            android:name="virtualtrading.coinactions.BuyCoinFragment"
            android:label="BuyCoinFragment"
            tools:layout="@layout/fragment_buy_coin">
            <deepLink
                app:uri="feature:coinactions://virtualtrading.coinactions/buyCoinFragment"/>
        </fragment>
    </navigation>
</navigation>